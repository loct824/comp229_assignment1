<%include ../partials/header.ejs%>
    <%include ../partials/main_nav.ejs%>
<!-- Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form control" id="nameTextField" 
                        placeholder="Enter the contact's Name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="numberTextField">Phone number</label>
                    <input type="text" class="form control" id="authorTextField" 
                        placeholder="Enter the phone number" name="phone" required>
                </div>
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form control" id="publishedTextField" 
                        placeholder="Enter the contact's email" name="email" required>
                </div>
                <form action = "/business/add" method="post">
                    <button class="btn btn-primary">Submit</button>
                    <!-- <a class ="btn btn-primary" role = "button" name="foo">Submit</a> -->
                    <!-- <a class="btn btn-primary" role="button">Submit</a> -->
                </form>
                
                <a href="/business" class="btn btn-warning" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>

